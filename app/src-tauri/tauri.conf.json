      "windows": {
        "installMode": "passive"
      }
    },
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "minHeight": 600,
        "resizable": true,
        "title": "Scribe",
        "minWidth": 800,
        "decorations": false,
        "focus": true,
        "center": true
      }
    ]
  }
