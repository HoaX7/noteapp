{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5000",
    "distDir": "../build"
  },
  "package": {
    "productName": "scribe",
    "version": "0.5.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "startDragging": true,
        "unmaximize": true,
        "close": true
      },
      "globalShortcut": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "confirm": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
